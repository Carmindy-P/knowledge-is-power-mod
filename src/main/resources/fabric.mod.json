{
  "schemaVersion": 1,
  "id": "knowledge-is-power-mod",
  "version": "${version}",
  "name": "Knowledge Is Power Mod",
  "description": "Consume enchantment books, gain powers!",
  "authors": ["Carmindy Creates"],
  "license": "MIT",
  "environment": "*",

  "entrypoints": {
    "main": ["net.carmindy.kipmod.KnowledgeIsPowerMod"],
    "server": ["net.carmindy.kipmod.KIPModServer"],
    "client": ["net.carmindy.kipmod.KIPModClient"],
    "modmenu": ["net.carmindy.kipmod.config.ModMenuIntegration"],
    "cardinal-components-entity": ["net.carmindy.kipmod.data.KIPEntityComponents"],
    "fabric-datagen": ["net.carmindy.kipmod.data.KnowledgeIsPowerModDataGenerator"]
  },
  "mixins": ["kipmod.mixins.json"],

  "depends": {
    "fabricloader": ">=0.18.1",
    "minecraft": "~1.21.1",
    "java": ">=21",
    "fabric-api": "*"
  },

  "suggests": {
    "modmenu": "*",
    "cloth-config": "*"
  },

  "custom": {
    "modmenu": { "update_checker": false }
  }
}